                        <i class="fa-solid fa-circle-question "></i>Adresse : {{ form_row(formPresentation.adresse) }}<br>
                       Jours & horaires d'ouverture : {{ form_row(formPresentation.joursEtHorairesOuverture) }}<br>

                        <button type="submit" class="btn bgbleu">Suivant</button>
                        {{ form_end(formPresentation) }}
                    </div>
                    <button type="button" data-bs-toggle="popover" title="Popover title" data-bs-content="Here's some amazing content.">Click to toggle popover</button>
                    <script>
                        $(document).ready(function(){
                            $('[data-bs-toggle="popover"]').popover();
                        });
                    </script>
                </div>
            </div>
        </div>
    </div>
    </div>
</section>
</body>
