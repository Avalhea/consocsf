{% extends 'base.html.twig' %}

{% block couleur %}
    bgbleu
{% endblock %}

{% block body %}
<body>
<section class="section">
    <div class="hero-body">
        <div class="container has-text-centered">
            <div class="column is-6 is-offset-3">
                <div class="box">
                    <h1 class="title txtbleu">Présentations</h1>
                    <hr class="login-hr">
                    <div class="field">
                        {{ form_start(formPresentation) }}
                        <i data-bs-toggle="tooltip" data-bs-placement="top" title="Veuillez indiquer le département à laquelle votre section est rattaché" class="fa-solid fa-circle-question "></i> UD : {{ form_row(formPresentation.UD) }}<br>

                        <i class="fa-solid fa-circle-question " data-bs-toggle="popover" title="Popover title" data-bs-content="And here's some amazing content. It's very engaging. Right?"></i> Echelle : {{ form_row(formPresentation.echelle) }}
