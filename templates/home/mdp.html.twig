{% extends 'base.html.twig' %}

{% block body %}
<style>

    .container {
        padding-top: 10vh;
    }
    .titre {
        text-align: center;
        margin-top: 5vh;
    }

    .deux {
        background-color: #d7d7d7;
        height: 43vh;
        width: 25vw;
        margin-top: 13vh;
        text-align: center;
        padding-top : 9vh;
        contain: content;
    }

    .deux:hover {
        background-color: #cecece;
        transition: 1s;
    }

</style>

    <div class="container">
        <h3 class="titre">Afin de protéger l'accès à votre compte, veuillez personnaliser votre mot de passe.</h3>

        <div class="container deux">
            {{ form_start(form) }}
            Nouveau mot de passe : {{ form_row(form.password.first) }}<br>
            Confirmation :  {{ form_row(form.password.second) }}
            <br>
            <button type="submit" class="btn bgbleu">Enregistrer</button>
            {{ form_end(form) }}
        </div>

    </div>

{% endblock %}