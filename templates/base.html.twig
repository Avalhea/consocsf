                            <li><a class="dropdown-item" href="{{ path('admin_ajoutertypecom') }}">Ajouter un type de communication</a></li>
                        </ul>
                    </li>
                {% endif %}

                <a class="navbar-brand"></a>
                <form class="d-flex">

                    <a href="{{ path('faq') }}"><button class="btn bgvertmenthe btn-default me-1" type="button" id="btnaide">FAQ</button></a>
                    <button class="btn bggris"> <a style="text-decoration: none; color:white" href="{{ path('app_logout') }}">Se déconnecter</a></button>
